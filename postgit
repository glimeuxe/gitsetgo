#!/bin/bash

repo_url=$(git remote get-url origin 2>/dev/null)

if [[ -z "$repo_url" ]]; then
	echo "❌ Failed to find repository"
	exit 1
fi

repo_name=$(basename "${repo_url%.git}")

# Check for unstaged changes
if ! git diff --quiet; then
	read -p "Detected unstaged changes. Stash changes before proceeding? Enter 'Y' or 'N': " stash_changes
	if [[ "$stash_changes" =~ ^[Yy]$ ]]; then
		if ! git stash; then
			echo "❌ Failed to stash changes"
			exit 1
		fi
		echo "✅ Stashed changes"
	else
		echo "❌ Please commit or stash changes before proceeding"
		exit 1
	fi
else
	echo "✅ No unstaged changes detected"
fi

branch_name=$(git rev-parse --abbrev-ref HEAD)

# Fetch changes from the remote branch, but do not merge
if ! git fetch origin "$branch_name"; then
	echo "❌ Failed to fetch from repository"
	exit 1
fi

# Add and commit changes
read -p "Commit message (optional): " commit_msg
git add .

commit_msg=${commit_msg:-""}
if ! git commit --allow-empty-message -m "$commit_msg"; then
	echo "❌ Failed to commit"
	exit 1
fi

# Force push local changes, overwriting remote
if ! git push --force origin "$branch_name"; then
	echo "❌ Failed to push changes (with force) to branch"
	exit 1
fi

echo "✅ Completed postgit for $repo_name/$branch_name"

# Apply stashed changes if they were stashed
if [[ "$stash_changes" =~ ^[Yy]$ ]]; then
	if ! git stash pop; then
		echo "❌ Failed to apply stashed changes"
		exit 1
	fi
	echo "✅ Applied stashed changes"
fi